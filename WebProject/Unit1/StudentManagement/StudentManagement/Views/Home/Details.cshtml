@*@model StudentManagement.Models.Student*@
@model HomeDetailsViewModel
@{
    ViewData["Title"] = "学生信息";
    var customModel = Model.Student;
    var photoPath = (customModel.Photo == null) ? "~/images/xiaobing.png" : "~/images/" + customModel.Photo;
}

<body>
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@customModel.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true"/>
                    <h4>学生ID:@customModel.Id</h4>
                    <h4>邮箱:@customModel.Email</h4>
                    <h4>班级名称:@customModel.ClassName</h4>
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="index" class="btn btn-primary">返回</a>
                        <a href="#" class="btn btn-primary">编辑</a>
                        <a href="#" class="btn btn-danger">删除</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

